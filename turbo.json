{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "bundle": {
      "cache": false,
      "dependsOn": ["^bundle"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
