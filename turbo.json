{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "test": {
      "dependsOn": []
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-ui": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "bundle": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
